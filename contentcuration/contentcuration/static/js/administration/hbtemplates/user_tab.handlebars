<div class="table_actions">
	<div class="action_grid">
		<div class='view_filter'>
			<label>View</label>
			<select id="admin_user_view" class="filter_input view_input users">
				{{#each filterOptions}}
				<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="sort_by">
			<label>Sort By</label>
			<select id="admin_user_sort" class="filter_input sort_input users">
				{{#each sortFilterOptions}}
				<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="order">
			<label>Order</label>
			<select id="admin_user_order" class="filter_input order_input users">
				{{#each sortOrderOptions}}
				<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="search">
			<input type="text" id="admin_user_search" placeholder="Search..." class="search_input users" value="{{collectionState.search}}"
			/>
			<a class="action-text search name_icon" title="Submit search">
				<i class="icon material-icons">search</i>
			</a>
		</div>
	</div>
	<button class="action-text email_button disabled pull-right" id="email_selected_users" disabled>
		<i class="material-icons">email</i>&nbsp;
		<span class="email_button_text">Select Users...</span>
	</button>
	</li>
	<div class="select_all checkbox">
		<label for="admin_user_select_all">
			<input type="checkbox" id="admin_user_select_all" class="select_all">Select All
		</label>
	</div>
</div>

<div id="admin_user_table_wrapper" class="admin_table_wrapper"></div>
<nav aria-label="User list page navigation">
	<ul class="pagination users">
		<li class="page-item {{#if disablePreviousPageButton}}disabled{{/if}}" {{#if disablePreviousPageButton}}aria-disabled="true"
		 {{/if}}>
			<a class="page-link previous">Previous</a>
		</li>
		{{#each pages}}
		<li class="page-item {{#if currentPage}}active{{/if}} {{#if collapsed}}collapsed{{/if}}">
			<a class="page-link page" data-page={{pageNumber}}>{{pageLinkText}}</a>
		</li>
		{{/each}}
		<li class="page-item {{#if disableNextPageButton}}disabled{{/if}}" {{#if disableNextPageButton}}aria-disabled="true" {{/if}}>
			<a class="page-link next">Next</a>
		</li>
	</ul>
</nav>