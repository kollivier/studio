<div class="modal fade information_modal" id="mastery_modal"  tabindex="-1">
<div class="input-tab-control tab_item" data-next="#mastery_modal_close_button"></div>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close tab_item" data-dismiss="modal" id="close_mastery_modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{formatMessage (intlGet 'messages.exercise')}}</h4>
        </div>
        <div class="modal-body">
        	<div class="modal-body-content">
                <p>{{formatMessage (intlGet 'messages.exercise_description')}}</p>
                <hr/>
                <h3>{{formatMessage (intlGet 'messages.mastery')}}</h3>
                <p>{{formatMessage (intlGet 'messages.mastery_description')}}</p>
                <div class="mastery_container">
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "num_correct_in_a_row_2"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "num_correct_in_a_row_2" "_description")}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "num_correct_in_a_row_3"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "num_correct_in_a_row_3" "_description")}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "num_correct_in_a_row_5"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "num_correct_in_a_row_5" "_description")}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "num_correct_in_a_row_10"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "num_correct_in_a_row_10" "_description")}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "do_all"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "do_all" "_description")}}}</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 criterion_name"><b>{{{translate "m_of_n"}}}</b></div>
                        <div class="col-xs-10 criterion_description">{{{translate (concat "m_of_n" "_description")}}}</div>
                    </div>
                </div>
            </div>
            <div class="modal-body-bottom container-fluid">
    			<button class="action-button pull-right tab_item first_focus_item" data-dismiss="modal" id="mastery_modal_close_button">{{formatMessage (intlGet 'messages.close')}}</button>
            </div>
        </div>
    </div>
</div>
<div class="input-tab-control tab_item" data-next=".close"></div>
</div>
