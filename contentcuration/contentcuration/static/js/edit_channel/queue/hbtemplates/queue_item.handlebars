<div> <!-- Added to make jquery sortable more robust -->
{{#unless is_segment}}
	<input type="checkbox" id="queue_file_{{node.id}}" {{#if checked}}checked{{/if}}></input>
{{/unless}}

<label for="queue_file_{{node.id}}" class="queue_item tog_folder {{#if is_segment}}segment{{/if}}">
	{{#unless is_segment}}
		<div class="queue-options pull-right">
			<a class="btn content-options-dropdown" role="button" rel="popover">
				<span class="material-icons">more_horiz</span>
			</a>
		</div>
  {{/unless}}

	<div class="queue_item_title title truncate {{#if is_segment}}segment{{/if}}" title="{{node.title}}">
		{{#if is_segment}}
			{{#if node.thumbnail}}
				<img class="content-item-thumbnail" aria-hidden="true" src="{{node.thumbnail}}" />
			{{else}}
				<span class="content-item-thumbnail">&nbsp;</span>
			{{/if}}
		{{/if}}
		{{#unless is_segment}}<span class="content-item-icon material-icons">{{{get_icon node.kind}}}</span>&nbsp;{{/unless}}
		{{#if is_segment}}
			{{#if node.title}}
				{{node.title}}
			{{else}}
				{{formatMessage (intlGet 'messages.recently_added')}}
			{{/if}}
		{{else}}
			{{node.title}}
		{{/if}}
		{{#if segment_url}}
			<a href="{{segment_url}}" target="_blank"><span class="segment-link-icon material-icons">link</span></a>
		{{/if}}
	</div>

	{{#if isfolder}}
		<div class="badge clipboard-topic-count">{{node.metadata.resource_count}}</div>
		<span id="menu_toggle_{{node.id}}" class="material-icons toggle-icon {{#if is_segment}}segment{{/if}}">expand_less</span>
	{{/if}}
</label>

{{#if isfolder}}<div id="{{node.id}}_sub" class="subdirectory wrapper {{#if is_segment}}segment{{/if}}"></div>{{/if}}

<div class="popover content-popover" tabindex="0" role="tooltip" id="queue_option_{{node.id}}">
	<div class="arrow"></div>
	<div class="popover-content">
		<div class="edit_content option">{{formatMessage (intlGet 'messages.edit')}}</div>
		<div class="copy_content option">{{formatMessage (intlGet 'messages.make_copy')}}</div>
		<div class="move_content option">{{formatMessage (intlGet 'messages.move')}}</div>
		<div class="delete_content option">{{formatMessage (intlGet 'messages.delete')}}</div>
	</div>
</div>

<nav class="context-menu hide-on-drag" tabindex="0">
	<div class="edit_content context-option">{{formatMessage (intlGet 'messages.edit')}}</div>
	<div class="copy_content context-option">{{formatMessage (intlGet 'messages.make_copy')}}</div>
	<div class="move_content context-option">{{formatMessage (intlGet 'messages.move')}}</div>
	<div class="delete_content context-option">{{formatMessage (intlGet 'messages.delete')}}</div>
</nav>
</div>
