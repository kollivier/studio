<div class="col-xs-4 format_editor_format_name truncate" title="{{#if is_language}}{{preset.readable_name}}{{else}}{{{translate preset.id}}}{{/if}}">
  <span class="format_preset_name">{{#if is_language}}{{preset.readable_name}}{{else}}{{{translate preset.id}}}{{/if}}</span>
</div>
<div class = "col-xs-8 format_slot_name">
  <div id="{{selector}}" class="format_dropzone">
    <div class="format_metadata">
    	{{#if file}}
      <div class="format_editor_options_wrapper pull-right">
        {{#if allow_edit}}
            <i class="material-icons format_editor_replace dz-clickable" title="{{formatMessage (intlGet 'messages.replace_file')}}">content_copy</i>
            <i class="material-icons format_editor_remove dz-clickable {{#unless preset.supplementary}}main_file_remove{{/unless}}" title="{{formatMessage (intlGet 'messages.delete_file')}}">clear</i>
        {{/if}}
      </div>
      {{/if}}
    </div>
    <div class="format_editor_file_name_wrapper">
    {{#if allow_edit}}
      {{#if file}}
        <div class="format_editor_file_name truncate" title="{{file.original_filename}}">{{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}</div>
        <i class="format_editor_selected_size">({{{format_file_size file.file_size}}})</i>
      {{else}}
          <a class="action-text add_format_button dz-clickable uppercase">+ {{formatMessage (intlGet 'messages.add')}}</a>
      {{/if}}
    {{else}}
      {{#if file}}
      <div class="format_editor_file_name truncate" title="{{file.original_filename}}">
        {{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}
      </div>
      <i class="format_editor_selected_size">({{{format_file_size file.file_size}}})</i>
      {{else}}
      <i class="format_editor_not_available">{{formatMessage (intlGet 'messages.not_available')}}</i>
      {{/if}}
    {{/if}}
    </div>
  </div>
</div>
