<div class="modal fade" id="stats-modal"  tabindex="-1">
<div class="modal-dialog modal-dialog-default">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{formatMessage (intlGet 'messages.summary_header')}}</h4>
        </div>
        <div class="modal-body">
            <div class="input-tab-control tab_item" data-next="#close_stats"></div>
        	<div class="modal-body-content">
                <div id="stats-table-wrapper" class="modal-content-default"><div class="empty_default">{{formatMessage (intlGet 'messages.generating_summary')}}</div></div>
            </div>
            <div class="modal-body-bottom container-fluid">
    			<button class="action-button pull-right tab_item first_focus_item" data-dismiss="modal" id="close_stats">{{formatMessage (intlGet 'messages.close')}}</button>
            </div>
            <div class="input-tab-control tab_item" data-next="#close_stats"></div>
        </div>
    </div>
</div>
</div>
